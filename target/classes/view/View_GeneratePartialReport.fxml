<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.Integer?>
<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.standardeleven.project.gui.controller.ControllerPractitionerHome">
    <fx:define>
        <Integer fx:id="BUTTON_SIZE" fx:value="200"/>
        <Integer fx:id="BACK_BUTTON_SIZE" fx:value="100"/>
    </fx:define>
    <center>
        <BorderPane>
            <center>
                <ScrollPane hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                    <HBox alignment="CENTER" spacing="15">
                        <VBox alignment="BASELINE_RIGHT" spacing="13">
                            <Label text="NRC:"/>
                            <Label text="Periodo Escolar:"/>
                            <Label text="Periodo del Reporte:"/>
                            <Label text="Horas Cubiertas:"/>
                            <Label text="Número de Informe:"/>
                            <padding>
                                <Insets top="6"/>
                            </padding>
                        </VBox>
                        <VBox alignment="BASELINE_LEFT" spacing="5">
                            <TextField promptText="NRC"/>
                            <TextField promptText="Periodo Escolar"/>
                            <TextField promptText="Periodo del Reporte"/>
                            <TextField promptText="Horas Cubiertas"/>
                            <TextField promptText="No. de Informe"/>
                        </VBox>
                    </HBox>
                </ScrollPane>
            </center>
            <padding>
                <Insets topRightBottomLeft="50" />
            </padding>
            <left>
                <Region BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Region BorderPane.alignment="CENTER" />
            </right>
            <top>
                <Label text="Generar Reporte Parcial" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </top>
        </BorderPane>
    </center>
    <left>
        <Region BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Region BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <Region BorderPane.alignment="CENTER" />
    </bottom>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Usuario">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Mi información" />
                        <MenuItem mnemonicParsing="false" text="Mensajería" />
                        <MenuItem mnemonicParsing="false" text="Cerrar Sesión" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

</BorderPane>
