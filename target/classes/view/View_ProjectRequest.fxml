<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.Integer?>
<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.standardeleven.project.gui.controller.ControllerProjectRequest">
    <fx:define>
        <Integer fx:id="BACK_BUTTON_SIZE" fx:value="100"/>
    </fx:define>
    <center>
        <BorderPane>
            <center>
                <ScrollPane fx:id="scrollProjects" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
                </ScrollPane>
            </center>
            <padding>
                <Insets bottom="15" top="50" right="50" left="50" />
            </padding>
            <left>
                <Region BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Region BorderPane.alignment="CENTER" />
            </right>
            <top>
                <Label text="Solicitar Proyecto" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </top>
        </BorderPane>
    </center>
    <left>
        <Region BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Region BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <HBox alignment="CENTER">
            <Button id="back" text="Atrás" onAction="back" alignment="CENTER" prefWidth="$BACK_BUTTON_SIZE"/>
            <padding>
                <Insets bottom="50"/>
            </padding>
        </HBox>
    </bottom>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Usuario">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Mi información"/>
                        <MenuItem mnemonicParsing="false" text="Mensajería"/>
                        <MenuItem mnemonicParsing="false" text="Cerrar Sesión"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

</BorderPane>
